                                                    Subscribe to Premium to start new
                                                </button>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                <!-- End Header -->

                                <div class="mb-4 py-4 px-6">
                                    <input id="searchFilter" type="text" placeholder="Search items"
                                        data-model="query"
                                        data-action="live#action"

                                        data-live-action-param="debounce(500)|search"

                                        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                                    {#                    <button #}
                                    {#                            class="px-4 py-2 bg-blue-500 text-white rounded-md ml-2 hover:bg-blue-600 focus:outline-none focus:bg-blue-600"> #}
                                    {#                        Search #}
                                    {#                    </button> #}
                                </div>

                                <script>
                                document.getElementById('searchFilter').addEventListener('keyup', function() {
                                    var selectedStatus = this.value;
                                    var currentUrl = window.location.href;
                                    var newUrl = updateQueryStringParameter(currentUrl, 'search', selectedStatus);
                                    window.location.href = newUrl;
                                });

                                function updateQueryStringParameter(uri, key, value) {
                                    var re = new RegExp("([?&])" + key + "=.*?(&|$)", "i");
                                    var separator = uri.indexOf('?') !== -1 ? "&" : "?";
                                    if (uri.match(re)) {
                                        return uri.replace(re, '$1' + key + "=" + value + '$2');
                                    } else {
                                        return uri + separator + key + "=" + value;
                                    }
                                }
                            </script>

                                <!-- Table -->
                                <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                                    <thead class="bg-gray-50 dark:bg-slate-900">
                                    <tr>
                                        <th scope="col" class="px-6 py-3 text-left">
                                            <div class="flex items-center gap-x-2">
                    <span class="text-xs font-semibold uppercase tracking-wide text-gray-800 dark:text-gray-200">
                      Preview
                    </span>
                                            </div>
                                        </th>

                                        <th scope="col" class="px-6 py-3 text-left">
                                            <div class="flex items-center gap-x-2">
                    <span class="text-xs font-semibold uppercase tracking-wide text-gray-800 dark:text-gray-200">
                        Generated time
                    </span>
                                            </div>
                                        </th>

                                        <th scope="col" class="px-6 py-3 text-left">
                                            <div class="flex items-center gap-x-2">
                    <span class="text-xs font-semibold uppercase tracking-wide text-gray-800 dark:text-gray-200">

                    </span>
                                            </div>
                                        </th>
                                        <th scope="col" class="px-6 py-3 text-left">
                                            <div class="flex items-center gap-x-2">
                    <span class="text-xs font-semibold uppercase tracking-wide text-gray-800 dark:text-gray-200">

                    </span>
                                            </div>
                                        </th>
                                    </tr>
                                    </thead>

                                    <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                                    {% for item in items %}
                                        <tr>
                                            <td class="h-px w-px whitespace-nowrap">
                                                <div class="px-6 py-2">
                                                    <div class="flex items-center gap-x-2">

                                                        <div class="grow">
                                                    <span class="text-sm text-gray-600 dark:text-gray-400">
                                                        {{ item.answer.first.answer|striptags|slice(0, 40) }}
                                                    </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="h-px w-px whitespace-nowrap">
                                                <div class="px-6 py-2">
                                                    <span class="text-sm text-gray-600 dark:text-gray-400">{{ item.createdAt|date }}</span>
                                                </div>
                                            </td>

                                            <td class="h-px w-px whitespace-nowrap">
                                                {% if item.answer.toarray|filter(a=>a.answer == null)|length == 0 %}
                                                    <a class="text-blue-500 hover:text-blue-700"
                                                       href="{{ path('app_answer', {
                                                           slug: item.slug
                                                       }) }}">view</a>
                                                {% else %}
                                                    <i class="fa-solid fa-spinner fa-spin-pulse"></i>
                                                    Processing
                                                {% endif %}
                                            </td>
                                            <td class="h-px w-px whitespace-nowrap">
                                                <a class="text-blue-500 hover:text-blue-700"
                                                   href="{{ path('app_answer_delete', {
                                                       slug: item.slug
                                                   }) }}">delete</a>
                                            </td>
                                        </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                                <!-- End Table -->
                                <!-- End Footer -->
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End Card -->
            </div>
            <!-- End Table Section -->

            <!-- Footer -->
            <div class="px-6 py-4 grid gap-3 md:flex md:justify-between md:items-center border-t border-gray-200 dark:border-gray-700">
                <div>
                    <p class="text-sm text-gray-600 dark:text-gray-400">
                        <span class="font-semibold text-gray-800 dark:text-gray-200">{{ items.totalItemCount }}</span>
                        results
                    </p>
                </div>

                <div>
                    {% if items %}
                        <div class="inline-flex gap-x-2">
                            {% if items.paginationData.current != items.paginationData.first %}
                                <a type="button"
                                    href="{{ path('app_bid-writer', {
                                        page: items.paginationData.current - 1,
                                    }) }}"
                                    {% if items.pagination.currentPageNumber <= 1 %}disabled{% endif %}
                                    class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-white dark:hover:bg-gray-800 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600">
                                    <svg class="w-3 h-3" width="16" height="16" viewBox="0 0 16 15" fill="none"
                                            xmlns="http://www.w3.org/2000/svg">
                                        <path d="M10.506 1.64001L4.85953 7.28646C4.66427 7.48172 4.66427 7.79831 4.85953 7.99357L10.506 13.64"
                                                stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                                    </svg>
                                    Prev
                                </a>
                            {% endif %}

                            {% if items.paginationData.current != items.paginationData.pageCount %}
                                <a type="button"
                                    href="{{ path('app_bid-writer', {
                                        page: items.paginationData.current + 1
                                    }) }}"
                                    class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-white dark:hover:bg-gray-800 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600">
                                    Next
                                    <svg class="w-3 h-3" width="16" height="16" viewBox="0 0 16 16" fill="none"
                                            xmlns="http://www.w3.org/2000/svg">
                                        <path d="M4.50598 2L10.1524 7.64645C10.3477 7.84171 10.3477 8.15829 10.1524 8.35355L4.50598 14"
                                                stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                                    </svg>
                                </a>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            </div>
            <!-- End Footer -->
        {% else %}
            <!-- Table Section -->
            <div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
