{% extends 'base.html.twig' %}

{% block title %}Fundin.ai{% endblock %}

{% block htmlClass %}light{% endblock %}

{% block bodyClass %}dark:bg-slate-900{% endblock %}

{% block body %}

    <main>
        {% if items %}
            <!-- Table Section -->
            <div class="">
                <!-- Card -->
                <div class="flex flex-col">
                    <div class="-m-1.5 overflow-x-auto">
