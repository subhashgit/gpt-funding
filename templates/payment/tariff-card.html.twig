<!-- Card -->
{% if tariff.popular %}
<div class="flex flex-col border-2 border-blue-600 text-center shadow-xl rounded-xl p-8 dark:border-blue-700 hover:shadow-lg transition-all">
    {% else %}
    <div class="flex flex-col border border-gray-200 text-center rounded-xl p-8 dark:border-gray-700 hover:shadow-lg transition-all">
        {% endif %}

        {% if tariff.popular %}
            <p class="mb-3">
                <span
                        class="inline-flex items-center gap-1.5 py-1.5 px-3 rounded-md text-xs uppercase font-semibold bg-blue-100 text-blue-800 dark:bg-blue-600 dark:text-white">Most popular</span>
            </p>
        {% endif %}

        <h4 class="font-medium text-lg text-gray-800 dark:text-gray-200">{{ tariff.title }}</h4>
        <span class="mt-5 font-bold text-5xl text-gray-800 dark:text-gray-200">
                                <span class="font-bold text-2xl -mr-2">£</span>
                                {{ tariff.price }}
                              </span>
        {#            <p class="mt-2 text-sm text-gray-500">Forever free</p> #}

        <ul class="mt-7 space-y-2.5 text-sm">
            <li class="flex space-x-2">
                <svg class="flex-shrink-0 h-5 w-5 text-blue-600" width="16" height="16" viewBox="0 0 16 16"
                     fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M11.5219 4.0949C11.7604 3.81436 12.181 3.78025 12.4617 4.01871C12.7422 4.25717 12.7763 4.6779 12.5378 4.95844L6.87116 11.6251C6.62896 11.91 6.1998 11.94 5.9203 11.6916L2.9203 9.02494C2.64511 8.78033 2.62032 8.35894 2.86493 8.08375C3.10955 7.80856 3.53092 7.78378 3.80611 8.02839L6.29667 10.2423L11.5219 4.0949Z"
                          fill="currentColor"></path>
                </svg>
{#                <span class="text-gray-800 dark:text-gray-400">#}
{#                                {{ tariff.points }} Credits#}
{#                              </span>#}
            </li>
            <li class="flex space-x-2">
                <svg class="flex-shrink-0 h-5 w-5 text-blue-600" width="16" height="16" viewBox="0 0 16 16"
                     fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M11.5219 4.0949C11.7604 3.81436 12.181 3.78025 12.4617 4.01871C12.7422 4.25717 12.7763 4.6779 12.5378 4.95844L6.87116 11.6251C6.62896 11.91 6.1998 11.94 5.9203 11.6916L2.9203 9.02494C2.64511 8.78033 2.62032 8.35894 2.86493 8.08375C3.10955 7.80856 3.53092 7.78378 3.80611 8.02839L6.29667 10.2423L11.5219 4.0949Z"
                          fill="currentColor"></path>
                </svg>
                <span class="text-gray-800 dark:text-gray-400">
                                Full Funding Database Access
                              </span>
            </li>            <li class="flex space-x-2">
                <svg class="flex-shrink-0 h-5 w-5 text-blue-600" width="16" height="16" viewBox="0 0 16 16"
                     fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M11.5219 4.0949C11.7604 3.81436 12.181 3.78025 12.4617 4.01871C12.7422 4.25717 12.7763 4.6779 12.5378 4.95844L6.87116 11.6251C6.62896 11.91 6.1998 11.94 5.9203 11.6916L2.9203 9.02494C2.64511 8.78033 2.62032 8.35894 2.86493 8.08375C3.10955 7.80856 3.53092 7.78378 3.80611 8.02839L6.29667 10.2423L11.5219 4.0949Z"
                          fill="currentColor"></path>
                </svg>
                <span class="text-gray-800 dark:text-gray-400">
                                Unlimited Users
                              </span>
            </li>

        </ul>

        {% if tariff.popular %}
            <a class="mt-5 inline-flex justify-center items-center gap-x-3 text-center bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-md hover:shadow-md focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2 focus:ring-offset-white transition py-3 px-4 dark:focus:ring-offset-gray-800"
               href="{{ path('app_payment', { tariff: tariff.id }) }}">
                Buy now
            </a>
        {% else %}
            <a class="mt-5 inline-flex justify-center items-center gap-2 rounded-md border-2 border-blue-600 font-semibold text-blue-600 hover:shadow-md hover:bg-blue-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all text-sm py-3 px-4 dark:text-blue-500 dark:border-blue-600 dark:hover:border-blue-700"
               href="{{ path('app_payment', { tariff: tariff.id }) }}">
                Buy now
            </a>
        {% endif %}
    </div>    <!-- End Card -->
