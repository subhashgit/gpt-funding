<div class="mt-5" {{ attributes }}>
    <!-- Form -->
    {{ form_start(form, {
        attr: {
            'novalidate': true,
            'data-action': 'live#action',
            'data-live-action-param'="prevent|saveRegistration"
            'data-model': '*'
        }
    }) }}

    {{ form_errors(form) }}

    <div class="grid gap-y-4">
        <!-- Form Group -->
        <div>
            {{ form_label(form.currentPassword, 'Current Password', {'label_attr': {'class': 'block text-sm mb-2 dark:text-white'}}) }}
            <div class="relative">
                {{ form_widget(form.currentPassword, {
                    'attr': {
                        'class': 'py-3 px-4 block w-full border-gray-200 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400',
                    }
                }) }}
                <div class="hidden absolute inset-y-0 right-0 flex items-center pointer-events-none pr-3">
                    <svg class="h-5 w-5 text-red-500" width="16" height="16" fill="currentColor"
                         viewBox="0 0 16 16" aria-hidden="true">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                    </svg>
                </div>
                {{ form_errors(form.currentPassword) }}
            </div>
        </div>
        <!-- End Form Group -->

        <!-- Form Group -->
        <div>
            {{ form_label(form.newPassword, 'New Password', {'label_attr': {'class': 'block text-sm mb-2 dark:text-white'}}) }}
            <div class="relative">
                {{ form_widget(form.newPassword, {
                    'attr': {
                        'class': 'py-3 px-4 block w-full border-gray-200 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400',
                    }
                }) }}
                <div class="hidden absolute inset-y-0 right-0 flex items-center pointer-events-none pr-3">
                    <svg class="h-5 w-5 text-red-500" width="16" height="16" fill="currentColor"
                         viewBox="0 0 16 16" aria-hidden="true">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                    </svg>
                </div>
                {{ form_errors(form.newPassword) }}
            </div>
        </div>
        <!-- End Form Group -->

        <!-- Form Group -->
        <div>
            {{ form_label(form.confirmPassword, 'Confirm Password', {'label_attr': {'class': 'block text-sm mb-2 dark:text-white'}}) }}
            <div class="relative">
                {{ form_widget(form.confirmPassword, {
                    'attr': {
                        'class': 'py-3 px-4 block w-full border-gray-200 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400',
                    }
                }) }}
                <div class="hidden absolute inset-y-0 right-0 flex items-center pointer-events-none pr-3">
                    <svg class="h-5 w-5 text-red-500" width="16" height="16" fill="currentColor"
                         viewBox="0 0 16 16" aria-hidden="true">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                    </svg>
                </div>
                {{ form_errors(form.confirmPassword) }}
            </div>
        </div>
        <!-- End Form Group -->

{#        {{ form_row(form.current_password  ) }}#}
{#        {{ form_row(form.new_password) }}#}
{#        {{ form_row(form.confirm_password) }}#}


        <button type="submit"
                class="py-3 px-4 inline-flex justify-center items-center gap-2 rounded-md border border-transparent font-semibold bg-blue-500 text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all text-sm dark:focus:ring-offset-gray-800">
            Change Password
        </button>

        <button
                type="submit"
                class="btn btn-primary {{ this.hasValidationErrors ? 'disabled' : '' }}"
        >Register</button>
    </div>
    {{ form_rest(form) }}

    {{ form_end(form) }}
    <!-- End Form -->
</div>
