                                    </li>
                                    <li>
                                        <b>Categories:</b>
                                        {% if app.user.isSubscribed %}
                                            {{ item.categories|join(', ') }}
                                        {% else %}
                                            Locations, Locations
                                        {% endif %}
                                    </li>
                                    <li>
