                                {% else %}
                                    <i class="fa-regular fa-star"></i>
                                {% endif %}
                            </button>

                        </div>

                        <a href="{{ path('app_grant_view', { slug: item.slug }) }}">
                            <div>
                                <h3 class="text-xl font-semibold">
                                    {{ item.title }}
                                </h3>
                                <p class="text-sm text-gray-400 {% if not app.user.isSubscribed %}blur-sm{% endif %}">
                                    {% if app.user.isSubscribed %}
